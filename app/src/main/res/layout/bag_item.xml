<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bag_item_image"
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/men_1_1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/bag_remove_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close_black_24dp" />

            <TextView
                android:layout_below="@id/bag_remove_item"
                android:id="@+id/bag_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="items one" />

            <TextView
                android:id="@+id/bag_item_size"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/bag_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="items one" />

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/bag_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="1999 EGP" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>